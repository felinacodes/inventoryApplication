<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Director</title>
    <link href="/public/css/tailwind.css" rel="stylesheet">
    <link rel="icon" href="/public/favicon.png" type="image/png">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    <script src="../public/js/dark-mode-toggle.js"></script>
    
</head>
<body>
    <%- include('partials/navbar', {links: links}) %>
    <h1>Update Actor</h1>
    <%- include('partials/errors') %>
    <form action="/directors/<%= director.id %>/update" method="POST" enctype="multipart/form-data">
        <label for="f_name">First Name:</label>
        <input type="text" id="f_name" name="f_name" value="<%= director.first_name %>">
        <label for="l_name">Last Name:</label>
        <input type="text" id="l_name" name="l_name" value="<%= director.last_name %>">
        <label for="gender">Gender:</label>
        <select id="gender" name="gender">
            <option value="Male" <%= director.gender === 'Male' ? 'selected' : '' %>>Male</option>
            <option value="Female" <%= director.gender === 'Female' ? 'selected' : '' %>>Female</option>
        </select>
        <label for="birth_date"> Birth Date: </label>
        <input type="date" id="birth_date" name="birth_date" value="<%= director.birth_date ? director.birth_date.toISOString().split('T')[0] : '' %>">

        <label for="death_date"> Death Date: (leave it empty if alive)</label>
        <input type="date" id="death_date" name="death_date" value="<%= director.death_date ? director.death_date.toISOString().split('T')[0] : '' %>">

        <label for="photo">Photo:</label>
        <img id="photoPreview"
        src="<%= director.photo_url ? director.photo_url : '/public/images/default.jpg' %>" 
        alt="director's Photo" 
        width="100"
        height="100"
        />
        <input type="file" id="photo" name="photo">
        <button type="button" onclick="showPasswordPrompt()">Update Director</button>
        <%- include('partials/passwordPrompt') %>
    </form>
    
    <script src="/public/js/photoPreview.js"></script>
    <script src="/public/js/showPasswordPrompt.js"></script>
</body>
</html>